{
    "name": "Song Lyrics Finder",
    "version": "1.0",
    "description": "Automatically searches for song lyrics when listening to a song on YouTube",
    "permissions": ["activeTab", "declarativeContent", "storage", "tabs", "https://genius.com/"],
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "page_action": {
    	"default_popup": "popup.html",
    	"default_icon": {
	        "128": "images/get_started32.png"
    	}
    },
    "icons": {
      "128": "images/get_started32.png"
    },
    "content_security_policy": "script-src 'self' https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js; object-src 'self'",
    "manifest_version": 2
 }